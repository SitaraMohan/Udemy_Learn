pipeline {
    agent any

    stages {
        stage('Build') {
                      steps {
                sh '''
                docker.image('node:18-alpine').inside('-v /c/data/jenkins_home/workspace/Udemy_Task:/workspace')
                    ls -la
                    node --version
                    npm --version
                    npm ci
                    npm run build
                    ls -la
                '''
            }
        }

        stage('Test') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }

            steps {
                sh '''
                    test -f build/index.html
                    npm test
                '''
            }
        }
    }

    post {
        always {
            junit 'test-results/junit.xml'
        }
    }
}
